# Environment variables for School Info System Backend

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/school_info_system?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption
ENCRYPTION_KEY="your-256-bit-encryption-key-change-this"
SALT_ROUNDS="12"

# Redis (for sessions and rate limiting)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT="3001"
NODE_ENV="development"

# Security
CORS_ORIGIN="http://localhost:3000,https://localhost:3000"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# File Storage
UPLOAD_DIR="uploads"
MAX_FILE_SIZE="10485760"

# Audio Processing
MAX_AUDIO_DURATION="300"

# Logging
LOG_LEVEL="info"